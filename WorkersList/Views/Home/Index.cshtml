@{
    ViewBag.Title = "Home Page";
}
@model WorkersList.Models.Company
<div>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Название</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var temp in ViewBag.Companies)
            {
                <tr>
                    <th>
                        @temp.Name
                    </th>

                </tr>
            }
        </tbody>
    </table>
    <button class="btn btn-primary" data-toggle="modal" data-target="#addForm">Добавить</button>
    <div class="modal fade" tabindex="-1" id="addForm" role="dialog" aria-hidden="true">
        @using (Html.BeginForm())
        {
            @Html.LabelFor(Model => Model.Name, "Название")
            <br />
            @Html.EditorFor(Model => Model.Name)
            <br />
            <input type="submit" value="Добавить" />
        }
    </div>
</div>